- if logged_in?
  .row
    %aside.col-md-4
      %section.user_info
        = render 'shared/user_info'
      %section.minipost_form
        = render 'shared/minipost_form'
    .col-md-8
      %h3 Micropost Feed
      = render 'shared/feed'
- else
  .center.jumbotron
    %h1 Welcome to the Sample App
    %h2
      This is the home page for the
      = link_to 'Ruby on Rails Tutorial', 'http://www.railstutorial.org/'
      sample application.
    = link_to "Sign up now!", :signup, class: "btn btn-lg btn-primary"
  = link_to image_tag("rails-logo.svg", alt: "Rails logo"), |
    'http://rubyonrails.org/'                          |
